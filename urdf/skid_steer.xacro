<?xml version="1.0"?>
<robot name="skid_steer" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="pi" value="3.14"/>
  <xacro:property name="chassis_length" value="0.5"/>
  <xacro:property name="chassis_width" value="0.3"/>
  <xacro:property name="chassis_height" value="0.1"/>
  <xacro:property name="wheel_radius" value="0.1"/>
  <xacro:property name="wheel_width" value="0.08"/>
  <xacro:property name="wheel_roll_angle" value="${pi/2}"/>

  <!-- Base Link (Chassis) -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <box size="0.5 0.3 0.1"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <box size="0.5 0.3 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.083" ixy="0" ixz="0" iyy="0.083" iyz="0" izz="0.083"/>
    </inertial>
  </link>


  <link name="front_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="${wheel_roll_angle} 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.08"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="${wheel_roll_angle} 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.08"/>
      </geometry>
      <friction>
        <ode>
          <mu>10.0</mu>
          <mu2>10.0</mu2>
          <slip1>0.0</slip1>
          <slip2>0.0</slip2>
        </ode>
      </friction>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="${wheel_roll_angle} 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>


  <link name="front_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="${wheel_roll_angle} 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.08"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="${wheel_roll_angle} 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.08"/>
      </geometry>
      <friction>
        <ode>
          <mu>10.0</mu>
          <mu2>10.0</mu2>
          <slip1>0.0</slip1>
          <slip2>0.0</slip2>
        </ode>
      </friction>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="${wheel_roll_angle} 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>


  <link name="rear_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="${wheel_roll_angle} 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.08"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="${wheel_roll_angle} 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.08"/>
      </geometry>
      <friction>
        <ode>
          <mu>10.0</mu>
          <mu2>10.0</mu2>
          <slip1>0.0</slip1>
          <slip2>0.0</slip2>
        </ode>
      </friction>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="${wheel_roll_angle} 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>


  <link name="rear_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="${wheel_roll_angle} 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.08"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="${wheel_roll_angle} 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.08"/>
      </geometry>
      <friction>
        <ode>
          <mu>10.0</mu>
          <mu2>10.0</mu2>
          <slip1>0.0</slip1>
          <slip2>0.0</slip2>
        </ode>
      </friction>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="${wheel_roll_angle} 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>


  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.2 0.2 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>


  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.2 -0.2 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>


  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.2 0.2 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>


  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.2 -0.2 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

    <link name="imu_link">
        <inertial>
            <origin xyz="0 0 0" />
            <mass value="0.01" />
            <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
        </inertial>

        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <box size="0.1 0.1 0.1" />
            </geometry>
        </visual>
    </link>

    <joint name="imu_joint" type="fixed">
        <parent link="base_link" />
        <child link="imu_link" />
        <origin xyz="0 0 0.2" rpy="0 0 0" />
    </joint>

    <!-- IMU Sensor -->
    <gazebo reference="imu_link">
        <sensor name="my_imu" type="imu">
            <always_on>true</always_on>
            <plugin name="my_imu_plugin" filename="libgazebo_ros_imu_sensor.so">
                <topicName>/imu</topicName>
                <updateRateHZ>100</updateRateHZ>
                <frameName>imu_frame</frameName>
            </plugin>
        </sensor>
    </gazebo>

      <!-- Plugin do Gazebo para o sensor Hokuyo -->
    <gazebo reference="imu_link">
        <sensor type="ray" name="hokuyo_sensor">
            <pose>0 0 0 0 0 0</pose>
            <ray>
                <scan>
                    <horizontal>
                        <samples>640</samples>
                        <resolution>1</resolution>
                        <min_angle>-2.26889</min_angle>
                        <max_angle>2.268899</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.08</min>
                    <max>10</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="gazebo_ros_laser" filename="libgazebo_ros_laser.so">
                <!-- Publicar a nuvem de pontos no tÃ³pico /hokuyo/points -->
                <topicName>/hokuyo/points</topicName>
                <frameName>hokuyo_link</frameName>
            </plugin>
            <always_on>1</always_on>
            <update_rate>30</update_rate>
            <visualize>true</visualize>
        </sensor>
    </gazebo>

  <!-- Plugin de controle de drive diferencial (skid-steer) -->
  <gazebo>
    <plugin name="skid_steer_controller" filename="libgazebo_ros_skid_steer_drive.so">
      <updateRate>100.0</updateRate>
      <robotNamespace>/</robotNamespace>
      <leftFrontJoint>front_left_wheel_joint</leftFrontJoint>
      <rightFrontJoint>front_right_wheel_joint</rightFrontJoint>
      <leftRearJoint>rear_left_wheel_joint</leftRearJoint>
      <rightRearJoint>rear_right_wheel_joint</rightRearJoint>
      <wheelSeparation>0.3</wheelSeparation>
      <wheelDiameter>0.2</wheelDiameter>
      <robotBaseFrame>base_link</robotBaseFrame>
      <torque>20</torque>
      <topicName>cmd_vel</topicName>
      <broadcastTF>false</broadcastTF>
    </plugin>
  </gazebo>

</robot>
